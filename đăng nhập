<body>

    <div class="login-container">
        <h2>ĐĂNG NHẬP HỆ THỐNG Y TẾ VNU</h2>
        <form id="loginForm">
            <div class="form-group">
                <label for="maBenNhan">Mã Bệnh Nhân (Mã số SV)</label>
                <input type="text" id="maBenNhan" required placeholder="Nhập mã sinh viên">
            </div>
            <div class="form-group">
                <label for="matKhau">Mật Khẩu</label>
                <input type="password" id="matKhau" required placeholder="Nhập mật khẩu">
            </div>
            <button type="submit" class="login-button">Đăng Nhập</button>
        </form>
        <p id="loginMessage"></p>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault(); 
            const maBenNhan = document.getElementById('maBenNhan').value.trim();
            const matKhau = document.getElementById('matKhau').value.trim();
            const messageElement = document.getElementById('loginMessage');

            if (maBenNhan && matKhau) {
                messageElement.textContent = 'Đăng nhập thành công! Đang chuyển hướng...';
                // Lưu Mã SV giả lập để hiển thị trên Dashboard
                localStorage.setItem('patientID', maBenNhan);
                
                setTimeout(() => {
                    window.location.href = 'dashboard.html'; 
                }, 1000); 
            } else {
                messageElement.textContent = 'Vui lòng nhập đầy đủ thông tin.';
            }
        });
    </script>
